@using Webdiyer.WebControls.Mvc
@model PagedList<ZCJ.Model.ArticleComment>
@{
    ViewBag.Title = "评论列表";
}

<table class="table table-hover table_all">
    <tr class="info">
        <td>
            @Html.DisplayNameFor(m => m.id)
        </td>
        <td>
            @Html.DisplayNameFor(m => m.Title)
        </td>
        <td>
            @Html.DisplayNameFor(m => m.CommentText)
        </td>
        <td>
            @Html.DisplayNameFor(m => m.Commenter)
        </td>
        <td>
            @Html.DisplayNameFor(m => m.CreateDate)
        </td>
        <td>操作
        </td>
    </tr>

    @foreach (var item in Model)
    {
        <td>
            @item.id
        </td>
        <td class="paddingleft">
            @item.Title
        </td>
        <td class="paddingleft">
            @item.CommentText
        </td>
        <td>
            @item.Commenter
        </td>
        <td>
            @item.CreateDate
        </td>
        <td>
            @Html.ActionLink("删除", "Delete", "ArticleComment", new { id = item.id }, null)
        </td>
    }
</table>
@Html.Pager(Model, new PagerOptions { PageIndexParameterName = "id" })
